#include <cs50.h>
#include <stdio.h>

int get_positive_int(string prompt);

int main(void)
{
    int i = get_positive_int("Defina un numero positivo \n");
    printf("%i\n", i);
}

int get_positive_int(string prompt)
{
    int n;
    do
    {
        n = get_int("%s", prompt);
    }
    while (n > 1 && n <= 8 );
    return n;

for (int i = 0; i < n; i++)
{
    for (int j = 0; j <n; j++)
    {
        printf("#");
    }
    printf("\n");
}
}
